---
import Linkedin from "../assets/icons/Linkedin.svg?raw";
import Mail from "../assets/icons/Mail.svg?raw";
import Github from "../assets/icons/Github.svg?raw";
import ExternalLink from "../assets/icons/ExternalLink.svg?raw";
import MailOutline from "../assets/icons/MailOutline.svg?raw";
import Popover from "../components/Popover.astro";
---

<section
    class="hero-section py-6 grid grid-cols-2 gap-6 md:gap-10 overflow-hidden"
>
    <div
        class="col-span-2 lg:col-span-1 flex flex-col justify-end gap-5 md:gap-10"
    >
        <span class="font-extrabold text-4xl md:text-6xl lg:text-8xl italic">
            Full stack / Backend Developer
        </span>
        <div class="font-bold text-xl md:text-2xl lg:text-3xl">
            Hello, World!
        </div>
        <div class="text-xs md:text-base">
            Software Engineer with 1 year of experience in full-stack
            development <br />
            using Vue3, Nuxt, Tailwind, and PHP Laravel framework, <br />
            4 years of experience in backend development, <br />
            IoT-data management using PHP Laravel on AWS Cloud services <br />
            and Kubernetes and deploying project to Cloud service <br />
            like Laravel Forge, AWS, Azure services. - Learn more
        </div>
    </div>
    <div
        class="col-span-2 lg:col-span-1 justify-self-center order-last lg:order-none flex flex-col items-stretch bg-yellow-200 rounded-xl max-w-9/10"
    >
        <div class="p-6 flex justify-center">
            <img src="/images/profile.jpeg" class="rounded-lg opacity-10" />
            <!-- <div
            class="w-[400px] h-[400px] aspect-square self-center bg-green-700 rounded-lg">
        </div> -->
        </div>

        <div class="pr-6 self-end flex flex-col">
            <div
                class="font-extrabold text-4xl md:text-5xl lg:text-6xl tracking-wide text-right italic"
            >
                Noppadon
            </div>
            <div
                class="font-extrabold text-4xl md:text-5xl lg:text-6xl tracking-wide text-right italic"
            >
                Tongtrakoon
            </div>
        </div>
    </div>
    <div class="col-span-2 lg:col-span-1 flex gap-4">
        <div class="font-normal">Contact :</div>
        <Popover popover-target="popover-email">
            <div data-popover-target="popover-email">
                <a href="mailto:noppadon.ttk@gmail.com" class="cursor-pointer">
                    <Fragment set:html={Mail} />
                </a>
            </div>

            <div slot="popover">
                <a href="mailto:noppadon.ttk@gmail.com" class="cursor-pointer">
                    <div
                        class="flex items-center gap-1 px-3 py-2 text-nowrap hover:underline"
                    >
                        <div class="w-4 h-4">
                            <Fragment set:html={MailOutline} />
                        </div>
                        noppadon.ttk@gmail.com
                    </div>
                </a>
            </div>
        </Popover>

        <Popover popover-target="popover-linkedin">
            <div data-popover-target="popover-linkedin">
                <a
                    href="https://www.linkedin.com/in/noppadon-ttk"
                    target="_blank"
                    class="cursor-pointer"
                >
                    <Fragment set:html={Linkedin} />
                </a>
            </div>

            <div slot="popover">
                <a
                    href="https://www.linkedin.com/in/noppadon-ttk"
                    target="_blank"
                    class="cursor-pointer"
                >
                    <div
                        class="flex items-center gap-1 px-3 py-2 text-nowrap hover:underline"
                    >
                        noppadon-ttk
                        <div class="w-4 h-4">
                            <Fragment set:html={ExternalLink} />
                        </div>
                    </div>
                </a>
            </div>
        </Popover>

        <Popover popover-target="popover-github">
            <div data-popover-target="popover-github">
                <a
                    href="https://github.com/Note5019"
                    target="_blank"
                    class="cursor-pointer"
                >
                    <Fragment set:html={Github} />
                </a>
            </div>

            <div slot="popover">
                <a
                    href="https://github.com/Note5019"
                    target="_blank"
                    class="cursor-pointer"
                >
                    <div
                        class="flex items-center gap-1 px-3 py-2 text-nowrap hover:underline"
                    >
                        Note5019
                        <div class="w-4 h-4">
                            <Fragment set:html={ExternalLink} />
                        </div>
                    </div>
                </a>
            </div>
        </Popover>
    </div>
</section>

<style>
    .hero-section {
        height: (100dvh - 90px);
        /* min-height: 560px; */
        max-height: 1200px;
        /* background-color: aquamarine; */
    }
</style>
